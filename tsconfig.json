{
  "extends": ["@tsconfig/recommended/tsconfig.json"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "removeComments": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["dist"]
}
